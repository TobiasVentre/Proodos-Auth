{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@proodos/domain/*": ["Domain/src/*"],
      "@proodos/application/*": ["Application/src/*"],
      "@proodos/infrastructure/*": ["Infrastructure/src/*"],
      "@proodos/api/*": ["API/src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}


